{
  "name": "@modelcontextprotocol/server-slack",
  "version": "0.1.0",
  "description": "MCP server exposing Slack Web API methods as tools",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "server-slack": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --out-dir dist",
    "dev": "ts-node src/index.ts",
    "codegen": "ts-node codegen/generate.ts",
    "prepublishOnly": "npm run codegen && npm run build",
    "test": "vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/typescript-sdk": "file:./mcp-sdk",
    "@slack/web-api": "^6.9.0",
    "zod": "^3.23.0",
    "fastify": "^4.25.2",
    "p-retry": "^5.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "handlebars": "^4.7.8",
    "vitest": "^1.1.0"
  }
}
