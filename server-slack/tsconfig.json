{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@modelcontextprotocol/typescript-sdk": ["src/mcp.ts"],
      "@modelcontextprotocol/typescript-sdk/*": ["src/mcp.ts"]
    }
  },
  "include": ["src/**/*.ts", "codegen/**/*.ts", "test/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
